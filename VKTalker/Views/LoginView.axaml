<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             xmlns:viewModels="clr-namespace:VKTalker.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VKTalker.Views.LoginView">
  <Design.DataContext>
    <viewModels:LoginViewModel />
  </Design.DataContext>
  <styles:Card>
    <Grid RowDefinitions="Auto 8 Auto 8 Auto" ColumnDefinitions="Auto *">
      <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"
               assists:TextFieldAssist.Label="Телефон или email" />
      <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
               assists:TextFieldAssist.Label="Пароль" />
      <Button Grid.Column="0" Grid.Row="4"
              Command="{Binding LoginCommand}">
        Войти
      </Button>
      <Button Grid.Column="1" Grid.Row="4"
              Classes="Flat"
              Command="{Binding ForgetPassword}">
        Забыли пароль?
      </Button>
    </Grid>
  </styles:Card>
</UserControl>